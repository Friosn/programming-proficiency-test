{
    "name": "hommingcom/programming-proficiency-test",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "vendor-dir": "vendor",
        "bin-dir": "vendor/bin"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "__tests__/php/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 src/ __tests__/php/"
    }
}
